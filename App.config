<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7" />
  </startup>
  <appSettings>
    <!-- The entitled user -->
    <add key="User" value="[youruser]@[yourtenant].onmicrosoft.com"/>
    <!-- The encrypted password of the entitled user -->
    <add key="SecuredPassword" value="[yourpwd]"/>
    <!-- Loop thru these mailboxes, separate with Semicolon -->
    <add key="Inbox" value="room1@[yourtenant].onmicrosoft.com;room2@[yourtenant].onmicrosoft.com"/>
    <!-- Max. number of appointments to load -->
    <add key="AppointmentCount" value="20"/>
    <!-- Check calendar (+ und - of today) -->
    <add key="Days" value="10"/>
    <!-- Max. number of emails to load  -->
    <add key="MessageCount" value="20"/>
    <!-- Move emails from Inbox: yes or no -->
    <add key="MoveEmails" value="yes"/>
  </appSettings>
</configuration>
